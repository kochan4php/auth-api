{
    "name": "server",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "start": "node ./src/index.js",
        "dev": "nodemon ./src/index.js",
        "lint": "eslint ./src/**/*.js",
        "lint:fix": "eslint ./src/**/*.js --fix",
        "prettier:check": "prettier --check .",
        "prettier:fix": "prettier --write .",
        "docker:db:dev:up": "pnpm docker:db:dev:down && docker compose -f ./docker/docker-compose.yml up -d",
        "docker:db:dev:down": "docker compose -f ./docker/docker-compose.yml down",
        "docker:image:rm": "docker image rm auth-api mongo",
        "docker:volume:rm": "docker volume rm mongodb-data mongo-dev",
        "docker:up": "pnpm docker:down && docker-compose up -d",
        "docker:down": "docker-compose down",
        "prepare": "husky install"
    },
    "keywords": [],
    "author": "Deo Subarno",
    "license": "MIT",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^7.5.2"
    },
    "devDependencies": {
        "eslint": "^8.49.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-n": "^16.1.0",
        "eslint-plugin-promise": "^6.1.1",
        "husky": "^8.0.3",
        "lint-staged": "^14.0.1",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.3"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "pnpm lint:fix",
            "pnpm prettier:fix"
        ]
    }
}
